extends layouts/main

block styles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")

block content
  div.contact-container
    h1 Contact Me
    
    div.contact-info
      div.contact-item
        i.fas.fa-phone
        a(href=`tel:${profile.contactInfo.phone}`)= profile.contactInfo.phone
      div.contact-item
        i.fas.fa-envelope
        a(href=`mailto:${profile.contactInfo.email}`)= profile.contactInfo.email
      div.contact-item
        i.fab.fa-linkedin
        a(href=profile.contactInfo.linkedin, target="_blank")= profile.contactInfo.linkedin
      div.contact-item
        i.fab.fa-github
        a(href=profile.contactInfo.github, target="_blank")= profile.contactInfo.github

    div.contact-form-container
      h2 Send me a message
      form.contact-form(method="POST", action="/contact")
        div.form-group
          label(for="name") Name:
          input(type="text", id="name", name="name", required)
        div.form-group
          label(for="email") Email:
          input(type="email", id="email", name="email", required)
        div.form-group
          label(for="subject") Subject:
          input(type="text", id="subject", name="subject", required)
        div.form-group
          label(for="message") Message:
          textarea(id="message", name="message", required)
        button(type="submit") Send Message
