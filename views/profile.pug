extends layouts/main

block content
  .profile-page
    .profile-header
      h1.profile-title Profile
    
    if user
      .profile-card
        .profile-avatar
          .avatar-circle
            span.avatar-initials #{user.username.charAt(0).toUpperCase()}
        
        .profile-info
          h2.welcome-text Welcome, #{user.username}!
          if user.email
            .info-item
              span.info-label Email
              span.info-value #{user.email}
          
          h3.section-title Account Details
          .info-list
            .info-item
              span.info-label Username
              span.info-value #{user.username}
            if user.firstName && user.lastName
              .info-item
                span.info-label Name
                span.info-value #{user.firstName} #{user.lastName}
            if user.createdAt
              .info-item
                span.info-label Member since
                span.info-value #{new Date(user.createdAt).toLocaleDateString()}
        
        .profile-btns
          a.view-btn.btn(href="/") Home
          a.delete-btn.btn(href="/logout") Logout
    else
      .not-logged-in
        .alert-icon
          i ⚠️
        p.alert-message You are not logged in.
        a.btn.btn-primary(href="/login") Login

