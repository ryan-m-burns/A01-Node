extends ../layouts/main

block content
  div.project-detail-container
    h1= project.title
    div.project-detail-content
      div.project-detail-image
        img(src=project.screenshot, alt=`${project.title} Screenshot`)
      div.tech-stack
        h2 Tech Stack
        ul
          each tech in project.tech
            li= tech
      div.project-description
        h2 Description
        p= project.description
    a.back-link(href="/projects") &larr; Back to Projects
    a.edit-link(href=`/projects/${project.id}/edit`, onclick="event.stopPropagation()") Edit Project
    a.delete-link(href=`/projects/${project.id}/delete`, onclick="event.stopPropagation()") Delete Project
  