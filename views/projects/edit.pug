extends ../layouts/main

block content 
  div.edit-project-container
    h1 Edit Project
    form.edit-project-form(method="post", action=`/projects/${project.id}/edit` enctype="multipart/form-data")
      label
        input(type="text" name="title" placeholder="Project Title" value=project.title required)
      label
        input(type="text" name="summary" placeholder="Project Summary" value=project.summary required)
      label Tech Stack
      button(type='button' class='add-tech') +
      div.tech-stack
        each tech in project.tech
          div
            input(type='text', name='tech', value=tech required)
            button(type='button' class='remove-tech') -
      label
        input(type="text" name="description" placeholder="Project Description" value=project.description required)
      label
        input(type="file" name="screenshot" placeholder="Screenshot URL" value=project.screenshot)
      div.actions
        button.update-btn.btn(type="submit") Update Project
        a.cancel-btn.btn(href=`/projects/${project.id}`) Cancel
    
    if errors
      div.error
        ul
          each error in errors
            li= error

  script(src="/utils/projectHelpers.js")