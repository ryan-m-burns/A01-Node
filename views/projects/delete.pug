extends ../layouts/main

block content
  h1= title
  div.delete-confirmation
    h2 Are you sure you want to delete the following project?
    
    div.project-details
      h1= project.title
      p.summary= project.summary
      
      if project.screenshot
        div.image-container
          img(src=project.screenshot, alt=`${project.title} Screenshot`)
      
      div.tech-stack
        h2 Tech Stack
        ul
          each tech in project.tech
            li= tech
      
      div.project-description
        h2 Description
        p= project.description
    
    div.actions
      form(method="POST")
        button.delete-btn.btn(type="submit") Confirm Delete
      a.cancel-btn.btn(href=`/projects/${project.id}`) Cancel